// This #include statement was automatically added by the Particle IDE.
#include <Adafruit_DHT.h>

#define DHTPIN D3 // the LED

#define DHTTYPE DHT11 //the sensor version

#define DELAY_TIME 3000 //static function

DHT dht(DHTPIN,DHTTYPE);

void setup() {

    dht.begin();

}

void loop() {
    delay(DELAY_TIME); // calls the static DELAY_TIME function instead of having to type a value
    String temp = String(dht.getTempCelcius());
    Particle.publish("temp", temp, PRIVATE);

}
